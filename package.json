{
  "name": "example-project",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build:ui && npm run build:web",
    "build:ui": "npm run build --workspace=packages/ui",
    "build:web": "npm run build --workspace=apps/web",
    "storybook": "npm run storybook --workspace=apps/web",
    "build-storybook": "npm run build-storybook --workspace=apps/web",
    "install:all": "npm install && npm install --workspace=packages/ui && npm install --workspace=apps/web"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/node": "^20.0.0",
    "prettier": "^3.0.0",
    "eslint": "^8.57.0"
  },
  "description": "Atomic Design System with React, Vite, and Storybook",
  "repository": {
    "type": "git",
    "url": "https://github.com/ryanjameskelley/example-project.git"
  },
  "author": "Ryan Kelley",
  "license": "MIT"
}